{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "strictNullChecks": false,
    "exactOptionalPropertyTypes": false,
    "allowImportingTsExtensions": false,
    "emitDeclarationOnly": false,
    "outDir": "dist/",
    "paths": {
      "@/*": [
        "src/*"
      ],
    }
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts",
    "node_modules",
    "dist",
  ],
  "include": [
    "src"
  ],
  "extends": "../../tsconfig.base.json",
}